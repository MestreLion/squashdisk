<?xml version="1.0" encoding="UTF-8"?>
<!--
Define an icon for Squashfs files, for Desktop Environments
To install this definition:
xdg-mime install \-\-novendor ./application-vnd-squashfs.xml
-->
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
	<mime-type type="application/vnd.squashfs">
		<generic-icon name="drive-removable-media"/>
		<!-- Other good candidates:
		<generic-icon name="drive-harddisk"/>
		<generic-icon name="package-x-generic"/>
		<generic-icon name="drive-multidisk"/>
		<generic-icon name="application-x-raw-disk-image"/>
		<generic-icon name="application-x-cd-image"/>
		-->
	</mime-type>
</mime-info>
